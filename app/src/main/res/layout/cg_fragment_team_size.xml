<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="online.findfootball.android.game.create.fragments.CGTitleFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/cg_game_team_size_frg_main_text"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="28dp"
        android:textStyle="bold"/>


    <online.findfootball.android.game.create.fragments.team.size.view.CustomNumberPicker
        android:id="@+id/number_picker"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"/>

</LinearLayout>
