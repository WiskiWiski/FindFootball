<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="org.blackstork.findfootball.online.blackstork.findfootball.game.info.tabs.GIAboutTab">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="24dp">


        <ProgressBar
            android:id="@+id/user_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/user_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <ImageView
                android:id="@+id/user_photo"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/user_photo"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="24dp"
                android:text="Username"
                android:textSize="24sp"
                tools:text="Username"/>

            <TextView
                android:id="@+id/user_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/user_photo"
                android:layout_below="@+id/user_name"
                android:layout_toRightOf="@+id/user_photo"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="24dp"
                android:text="This is user description"
                android:textSize="16sp"
                tools:text="This is user description "/>


        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/game_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:paddingLeft="24dp"
        android:text="This is game description"
        android:textSize="18sp"
        tools:text="This is game description"/>

    <TextView
        android:id="@+id/game_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="24dp"
        android:text="12.05.2017 15:30"
        android:textAllCaps="true"
        android:textSize="18sp"
        tools:text="12.05.2017 15:30"/>

    <TextView
        android:id="@+id/game_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="24dp"
        android:text="Минск"
        android:textSize="18sp"
        tools:text="Минск"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/notification_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="24dp"
            android:text="Chat notifications"
            android:textSize="18sp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/gmap_button"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/holo_green_dark"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Google Maps"
            android:textColor="@android:color/white"
            android:textSize="26sp"/>

    </FrameLayout>


</LinearLayout>
